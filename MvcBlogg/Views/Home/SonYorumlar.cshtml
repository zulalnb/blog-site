    Layout = null;
}
<h5 class="card-header">Son Yapılan Yorumlar</h5>
<div class="card-body">
    <div class="col-lg-12">
        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Icerik</li>
            }
        </ul>
    </div>
</div>